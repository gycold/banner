<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.easyandroid">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.GET_TASKS"/>

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".demos.BannerAnimationActivity"/>
        <activity android:name=".demos.BannerStyleActivity"/>
        <activity android:name=".demos.IndicatorPositionActivity"/>
        <activity android:name=".demos.CustomBannerActivity"/>
        <activity android:name=".demos.BannerLocalActivity"/>
        <activity
            android:name=".demos.CustomViewPagerActivity"
            android:screenOrientation="portrait"/>
    </application>

</manifest>