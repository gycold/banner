<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.easyandroid.banner.Banner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner1"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:indicator_drawable_selected="@drawable/selected_radius"
            app:indicator_drawable_unselected="@drawable/unselected_radius"
            app:indicator_height="8dp"
            app:indicator_margin="4dp"
            app:indicator_selected_width="8dp"
            app:indicator_unselected_width="8dp"/>

        <com.easyandroid.banner.Banner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner2"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:indicator_drawable_selected="@drawable/shape_banner_indicator_selected"
            app:indicator_drawable_unselected="@drawable/shape_banner_indicator_unselected"
            app:indicator_height="4dp"
            app:indicator_margin="4dp"
            app:indicator_selected_width="10dp"
            app:indicator_unselected_width="7dp"/>

        <com.easyandroid.banner.Banner
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/banner3"
            android:layout_width="match_parent"
            android:layout_height="170dp"
            app:title_background="#555CB85C"
            app:title_height="30dp"
            app:title_textcolor="@android:color/white"
            app:title_textsize="10sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:padding="20dp"
            android:text="这里只是列举了一部分自定义属性的使用 \n 更多用法请看文档"/>
    </LinearLayout>
</ScrollView>